  },
  "software": {
    "base": {
      "name": "apache_php_web",
      "framework": "apache_php",
      "deployment_type": "web",
      "http_protocol": "http_and_https",
      "memory": {
        "required": 96,
        "recommended": 128
      }
    },
    "scripts": {
      "start": {
        "language": "sh"
      },
      "install": {
        "language": "sh"
      },
      "post_install": {
        "language": "sh"
      },
      "shutdown": {
        "language": "sh"
      }
    },
    "required_modules": [
      {
        "name": "rewrite",
        "type": "apache"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "engine_path": "/home/app",
          "permissions": "rw",
          "volume_src": " ",
          "service_name": "_Engines_Builder(engine_name)",
          "group": "_Engines_Builder(data_gid)",
          "user": "_Engines_Builder(data_uid)"
        }
      },
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "database/sql/mysql",
        "variables": {
          "database_name": "_Engines_Builder(engine_name)",
          "database_host": "_Engines_System(mysql_host)",
          "db_username": "_Engines_Builder(engine_name)",
          "db_password": "_Engines_System(random(10))",
          "collation": "utf8_general_ci",
          "full_access": "0"
        }
      },
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/service/ftp",
        "variables": {
          "volume": "_Engines_Environment(volume_name)",
          "folder": "/",
          "username": "_Engines_Builder(engine_name)",
          "password": "_Engines_System(random(8))",
          "rw_access": "true",
          "ftp_gid": "_Engines_Builder(data_gid)"
        }
      }
    ],
    "database_seed": {
      "language": "text"
    },
    "file_write_permissions": [
      {
        "path": "./",
        "recursive": true
      }
    ]
  }
